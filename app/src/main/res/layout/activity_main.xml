<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.MainActivity">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_coordinator_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_primary"
            android:fitsSystemWindows="true"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="@color/color_grey"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <ImageView
                    android:id="@+id/user_photo_img"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profile_image_size"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/userphoto"/>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:theme="@style/AppTheme.PopupOverlay"
                    android:titleTextColor="@color/color_white"
                    app:layout_collapseMode="pin"/>

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Statistic block -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:background="@color/color_grey"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/spacing_medial_24"
                    android:paddingTop="@dimen/spacing_medial_24">

                    <LinearLayout
                        style="@style/statistic_block_item_layout">

                        <TextView
                            style="@style/header_labels.counter"
                            android:text="@string/rating_counter_label"/>

                        <TextView
                            style="@style/header_labels.label"
                            android:text="@string/rating_label"/>

                    </LinearLayout>

                    <View
                        style="@style/statistic_block_separator"/>

                    <LinearLayout
                        style="@style/statistic_block_item_layout"
                        android:layout_weight="2">

                        <TextView
                            style="@style/header_labels.counter"
                            android:text="@string/num_coded_counter_label"/>

                        <TextView
                            style="@style/header_labels.label"
                            android:text="@string/num_coded_label"/>

                    </LinearLayout>

                    <View
                        style="@style/statistic_block_separator"/>

                    <LinearLayout
                        style="@style/statistic_block_item_layout">

                        <TextView
                            style="@style/header_labels.counter"
                            android:text="@string/projects_counter_label"/>

                        <TextView
                            style="@style/header_labels.label"
                            android:text="@string/projects_label"/>

                    </LinearLayout>

                </LinearLayout>
                <!-- /Statistic block -->

                <LinearLayout
                    style="@style/user_info_row">

                    <ImageView
                        android:id="@+id/call_img"
                        style="@style/icon.left"
                        android:src="@drawable/ic_call_black_24dp"/>

                    <LinearLayout
                        style="@style/layout_et">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/phone_et"
                                style="@style/edit_text"
                                android:hint="@string/phone_hint"
                                android:inputType="phone"
                                android:text="@string/phone_text"/>

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_phone_in_talk_black_24dp"/>

                </LinearLayout>

                <View
                    style="@style/user_info_separator"/>

                <LinearLayout
                    style="@style/user_info_row">

                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_email_black_24dp"/>

                    <LinearLayout
                        style="@style/layout_et">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/email_et"
                                style="@style/edit_text"
                                android:hint="@string/email_hint"
                                android:inputType="textEmailAddress"
                                android:text="@string/email_text"/>

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_send_black_24dp"/>

                </LinearLayout>

                <View
                    style="@style/user_info_separator"/>

                <LinearLayout
                    style="@style/user_info_row">

                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_vk_circle_24dp"/>

                    <LinearLayout
                        style="@style/layout_et">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/vk_et"
                                style="@style/edit_text"
                                android:hint="@string/profile_hint"
                                android:inputType="text"
                                android:text="@string/profile_text"/>

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_visibility_black_24dp"/>
                </LinearLayout>

                <View
                    style="@style/user_info_separator"/>

                <LinearLayout
                    style="@style/user_info_row">

                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_github_circle_24dp"/>

                    <LinearLayout
                        style="@style/layout_et">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/repository_et"
                                style="@style/edit_text"
                                android:hint="@string/repository_hint"
                                android:inputType="text"
                                android:text="@string/repository_text"/>

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_visibility_black_24dp"/>

                </LinearLayout>

                <View
                    style="@style/user_info_separator"/>

                <LinearLayout
                    style="@style/user_info_row">

                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_account_circle_black_24dp"/>

                    <LinearLayout
                        style="@style/layout_et"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/about_self_et"
                                style="@style/edit_text"
                                android:hint="@string/about_self_hint"
                                android:inputType="textMultiLine"
                                android:text="@string/about_self_text"
                                />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_visibility_black_24dp"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/fab_right_space"
            android:layout_marginRight="@dimen/fab_right_space"
            android:src="@drawable/ic_create_black_24dp"
            app:layout_anchor="@id/appbar_layout"
            app:layout_anchorGravity="bottom|right"/>

    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer_menu">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>