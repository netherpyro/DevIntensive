<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Statistic block -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@color/color_grey"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/spacing_medial_24"
            android:paddingTop="@dimen/spacing_medial_24">

            <LinearLayout
                style="@style/statistic_block_item_layout">

                <TextView
                    style="@style/header_labels.counter"
                    android:text="@string/rating_counter_label"/>

                <TextView
                    style="@style/header_labels.label"
                    android:text="@string/rating_label"/>

            </LinearLayout>

            <View
                style="@style/statistic_block_separator"/>

            <LinearLayout
                style="@style/statistic_block_item_layout"
                android:layout_weight="2">

                <TextView
                    style="@style/header_labels.counter"
                    android:text="@string/num_coded_counter_label"/>

                <TextView
                    style="@style/header_labels.label"
                    android:text="@string/num_coded_label"/>

            </LinearLayout>

            <View
                style="@style/statistic_block_separator"/>

            <LinearLayout
                style="@style/statistic_block_item_layout">

                <TextView
                    style="@style/header_labels.counter"
                    android:text="@string/projects_counter_label"/>

                <TextView
                    style="@style/header_labels.label"
                    android:text="@string/projects_label"/>

            </LinearLayout>

        </LinearLayout>
        <!-- /Statistic block -->

        <LinearLayout
            style="@style/user_info_row">

            <ImageView
                style="@style/icon.left"
                android:src="@drawable/ic_call_black_24dp"/>

            <LinearLayout
                style="@style/layout_et">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/phone_et"
                        style="@style/edit_text"
                        android:hint="@string/phone_hint"
                        android:inputType="phone"
                        android:text="@string/phone_text"
                        android:maxLength="20"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/call_img"
                style="@style/icon.right"
                android:src="@drawable/ic_phone_in_talk_black_24dp"/>

        </LinearLayout>

        <View
            style="@style/user_info_separator"/>

        <LinearLayout
            style="@style/user_info_row">

            <ImageView
                style="@style/icon.left"
                android:src="@drawable/ic_email_black_24dp"/>

            <LinearLayout
                style="@style/layout_et">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/email_et"
                        style="@style/edit_text"
                        android:hint="@string/email_hint"
                        android:inputType="textEmailAddress"
                        android:text="@string/email_text"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/sendto_img"
                style="@style/icon.right"
                android:src="@drawable/ic_send_black_24dp"/>

        </LinearLayout>

        <View
            style="@style/user_info_separator"/>

        <LinearLayout
            style="@style/user_info_row">

            <ImageView
                style="@style/icon.left"
                android:src="@drawable/ic_vk_circle_24dp"/>

            <LinearLayout
                style="@style/layout_et">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/vk_et"
                        style="@style/edit_text"
                        android:hint="@string/profile_hint"
                        android:inputType="text"
                        android:text="@string/profile_text"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/view_vk_profile_img"
                style="@style/icon.right"
                android:src="@drawable/ic_visibility_black_24dp"/>
        </LinearLayout>

        <View
            style="@style/user_info_separator"/>

        <LinearLayout
            style="@style/user_info_row">

            <ImageView
                style="@style/icon.left"
                android:src="@drawable/ic_github_circle_24dp"/>

            <LinearLayout
                style="@style/layout_et">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/repository_et"
                        style="@style/edit_text"
                        android:hint="@string/repository_hint"
                        android:inputType="text"
                        android:text="@string/repository_text"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/view_git_img"
                style="@style/icon.right"
                android:src="@drawable/ic_visibility_black_24dp"/>

        </LinearLayout>

        <View
            style="@style/user_info_separator"/>

        <LinearLayout
            style="@style/user_info_row">

            <ImageView
                style="@style/icon.left"
                android:src="@drawable/ic_account_circle_black_24dp"/>

            <LinearLayout
                style="@style/layout_et"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/about_self_et"
                        style="@style/edit_text"
                        android:hint="@string/about_self_hint"
                        android:inputType="textMultiLine"
                        android:text="@string/about_self_text"
                        />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <ImageView
                style="@style/icon.right"
                android:src="@drawable/ic_visibility_black_24dp"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>